{
  "compilerOptions": {
    "target": "ES2017",
    "module": "CommonJS",
    "lib": ["ES2017", "ESNext.AsyncIterable"],
    "sourceMap": false,
    "outDir": "./dist",
    "moduleResolution": "node",
    "removeComments": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "baseUrl": ".",
    "paths": {
      "@module/*": ["lib/modules/*"],
      "@util/*": ["lib/utils/*"],
      "@DI": ["lib/mikro-orm.config.ts"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["./lib/**/*.ts"]
}
